<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Test Winery", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Wines", "Index", "Product")</li>
                    <li>@Html.ActionLink("Clubs", "Index", "Club")</li>
                    <li>@Html.ActionLink("Cart", "Index", "Cart")</li>
                    <li><a href="/Register">Register</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><div data-vsplugin="accountLinks"></div></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" id="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="http://[PlatformIp]:8888/scripts/2.0/all.js"></script>
    <script type="text/javascript" src="Scripts/jquery.maskedinput.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
